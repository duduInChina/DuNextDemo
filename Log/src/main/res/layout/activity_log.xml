<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:hint="Tag"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            />

        <com.google.android.material.card.MaterialCardView
            style="@style/MyMainCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LogCat"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控制台日志，项目debug模式下才输出"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logD"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogD"
                            android:textColor="#6B865B"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logE"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogE"
                            android:textColor="#CD5C59"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logW"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogW"
                            android:textColor="#BBB438"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logV"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogV"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logI"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogI"
                            android:textColor="#325D77"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MyMainCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XLog"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="埋点数据及状态日志，部署到生产环境，采用mars框架中的XLog，mmap内存映射文件，保证流畅防止日志丢失，日志压缩加密，作用于日志回捞（后台push回捞上传日志）\n LogE异常日志主动写入，DeBug下会输出日志"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logX"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogX"
                            android:textColor="#325D77"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/logXPush"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="LogXPush"
                            android:textColor="#325D77"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MyMainCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XCrashLog"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App发生Crash，异常日志Log记录到文件，下次打开App时日志文件提交到服务器\n Tread.setDefaultUncaughtExceptionHandler：java崩溃异常处理器 \n XCrash：捕获java崩溃，native崩溃和ANR崩溃 \n bugly：第三方sdk平台完成监控提交"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_small" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/javaCrash"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="JavaCrash"
                            android:textColor="#325D77"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/nativeCrash"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="NativeCrash"
                            android:textColor="#F44336"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/anrCrash"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="ANRCrash"
                            android:textColor="#009688"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sendCrash"
                        style="@style/MyItemCardViewFocused"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="SendCrash"
                            android:textColor="#000000"
                            android:textSize="@dimen/text_medium" />

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/MyMainCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无埋点统计"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/trackerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="@dimen/text_small" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>